#!/usr/bin/env python3
import os
import multiprocessing
from omop_embed import etl, conf

def merge_partition (args):
    etl.merge_partition(*args)

if __name__ == '__main__':
    import argparse
    parser = argparse.ArgumentParser()
    parser.add_argument("-p", "--parallel", help="load with multiple processes", type=int, default=4)
    parser.add_argument('dirs', nargs='+', help='dirs to merge')
    args = parser.parse_args()

    args = parser.parse_args()

    out_paths = []
    for path in args.dirs:
        out_paths.append(os.path.join(path, 'partition'))
    pool = multiprocessing.Pool(args.parallel)
    for _ in pool.imap_unordered(merge_partition, zip(args.dirs, out_paths)):
        pass

